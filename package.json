{
  "name": "yarn-workspace",
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "check": "yarn workspaces list --json",
    "build:all": "yarn workspaces foreach -A run build",
    "push:origin": "git push origin $(git symbolic-ref --short HEAD)",
    "test": "jest  --env=jsdom",
    "test:hook": "jest --projects packages/react-hook --watch  --env=jsdom"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "esbuild": "^0.19.8",
    "esbuild-node-externals": "^1.11.0",
    "eslint": "latest",
    "eslint-config-next": "^14.0.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "pinst": "^3.0.0",
    "prettier": "latest",
    "ts-jest": "^29.1.1",
    "typescript": "latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "4.x"
  }
}
